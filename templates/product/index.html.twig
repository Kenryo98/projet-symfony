{% extends 'base.html.twig' %}



{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<!-- <a href="/product/new"><button type="button" class="btn btn-primary">Créer un article</button></a> -->

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
        <th scope="col">Prix</th>
        <th scope="col">Description</th>
        <th scope="col">Date de création</th>
      </tr>
    </thead>
    <tbody>
        {% for product in products %}
      <tr>
        <th scope="row">{{ product.id }}</th>
        <td><a href="{{ path('product.show', {id : product.id}) }}">{{ product.name }}</a></td>
        <td>{{ product.price }}</td>
        <td>{{ product.description | slice(0, 300) }} <a href="{{ path('product.show', {id : product.id}) }}">...voir plus</a></td>
        <td> {{ product.createdAt|date("d/m/Y") }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
